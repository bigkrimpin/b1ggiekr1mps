<?xml version="1.0"?>
<!DOCTYPE kpartgui>
<effect tag="frei0r.bk_wavr" id="frei0r.bk_wavr" type="video">
	<name>bk_wavr</name>
	<description>Makes the image do a wave</description>
	<author>BIG KRIMPIN</author>

	<parameter type="list" name="wave_function" default="1" paramlist="0;1;2">
		<paramlistdisplay>Sawtooth,Sine,Triangle</paramlistdisplay>
		<name>Wave Function</name>
	</parameter>

	<parameter type="animated" name="amplitude" max="100" min="-100" default="20">
		<name>Amplitude</name>
	</parameter>

	<parameter type="animated" name="frequency" max="100" min="-100" default="5">
		<name>Frequency</name>
	</parameter>

	<parameter type="animated" name="speed" max="100" min="-100" default="1" decimals="1">
		<name>Speed</name>
	</parameter>
</effect>

